apiVersion: v1
kind: Service
metadata:
  name: wordpress
  labels:
    app: wordpress
spec:
  ports:
    - port: 8080
  selector:
    app: wordpress
    tier: frontend
  type: ClusterIP
---
# Persistent volume claim to persist website data files
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: wp-pv-claim
  labels:
    app: wordpress
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 20Gi
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: wordpress
  labels:
    app: wordpress
spec:
  selector:
    matchLabels:
      app: wordpress
      tier: frontend
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: wordpress
        tier: frontend
    spec:
      securityContext:
        fsGroup: 1001
      containers:
        - image: docker.io/bitnami/wordpress-nginx:6
          name: wordpress
          env:
          - name: WORDPRESS_BLOG_NAME
            value: 'test'
          - name: WORDPRESS_DATABASE_HOST
            value: 'wordpress-mysql'
          - name: WORDPRESS_DATABASE_NAME
            value: 'bitnami_wordpress'
          - name: WORDPRESS_DATABASE_USER
            value: 'bn_wordpress'
          - name: WORDPRESS_DATABASE_PASSWORD
            valueFrom:
              secretKeyRef:
                name: db-secret
                key: bitnamidb
          - name: WORDPRESS_EMAIL
            value: 'omarvilera21@gmail.com'
          - name: WORDPRESS_FIRST_NAME
            value: 'Omar'
          - name: WORDPRESS_LAST_NAME
            value: 'Vilera'
          - name: WORDPRESS_PASSWORD
            valueFrom:
              secretKeyRef:
                name: wppass
                key: wpsecret
          - name: WORDPRESS_PLUGINS
            value: 'woocommerce, classic-editor'
          - name: WORDPRESS_USERNAME
            value: 'ovilera'
          securityContext:
            runAsUser: 1001
          ports:
            - containerPort: 8080
              name: wordpress
          volumeMounts:
            - name: wordpress-persistent-storage
              mountPath: /bitnami/wordpress
        
      volumes:
        - name: wordpress-persistent-storage
          persistentVolumeClaim:
            claimName: wp-pv-claim
---
apiVersion: v1
kind: Service
metadata:
  name: wordpress-mysql
  labels:
    app: wordpress
spec:
  ports:
  - port: 3306
  selector:
    app: wordpress
    tier: mysql
  clusterIP: None
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: wordpress-mysql
spec:
  selector:
    matchLabels:
      app: wordpress
      tier: mysql
  serviceName: wordpress-mysql
  replicas: 1
  template:
    metadata:
      labels:
        app: wordpress
        tier: mysql
    spec:
      securityContext:
        fsGroup: 1001      
      containers:
      - image: bitnami/mysql:latest
        name: mysql
        env:
        - name: MYSQL_USER
          value: 'bn_wordpress'
        - name: MYSQL_DATABASE
          value: 'bitnami_wordpress'
        - name: MYSQL_ROOT_PASSWORD
          valueFrom:
            secretKeyRef:
              name: db-secret
              key: rootdb
        - name: MYSQL_PASSWORD
          valueFrom:
            secretKeyRef:
               name: db-secret
               key: bitnamidb
        securityContext:
          runAsUser: 1001
        ports:
          - containerPort: 3306
            name: mysql
        volumeMounts:
          - name: wordpress-persistent-storage
            mountPath: /bitnami/mariadb
      volumes:
        - name: wordpress-persistent-storage
          persistentVolumeClaim:
            claimName: wp-pv-claim
